<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme1t">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="226dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="107dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="69dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout2">

        <ImageView
            android:layout_width="368dp"
            android:layout_height="182dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/download"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="548dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/linearStyle"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/fab_padding"
        android:background="@color/theme1"
        android:paddingBottom="@dimen/fab_padding"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">


        <TextView
            style="@style/textView_Style"
            android:text="Bienvenue sur la plateforme de gestion de rendez-vous de Polytech Nice" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="32dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">


        <Button
            android:id="@+id/StudentButton"
            style="@style/buttonStyle"
            android:backgroundTint="@color/theme1d"
            android:text="Etudiant" />

        <Button
            android:id="@+id/AdminButton"
            style="@style/buttonStyle"
            android:backgroundTint="@color/theme1d"
            android:text="Administration" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>