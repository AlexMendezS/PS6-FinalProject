<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout2"
        style="@style/linearStyle"
        android:layout_marginTop="8dp"
        android:paddingTop="@dimen/fab_padding"
        android:paddingBottom="@dimen/fab_padding"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="10dp">


        <TextView
            style="@style/textView_Style"
            android:text="Bienvenue sur la plateforme de gestion de rendez-vous de Polytech Nice" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="32dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/StudentButton"
            style="@style/buttonStyle"
            android:backgroundTint="@color/colorPrimary"
            android:text="Etudiant" />

        <Button
            android:id="@+id/AdminButton"
            style="@style/buttonStyle"
            android:backgroundTint="@color/colorPrimary"
            android:text="Administration" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>